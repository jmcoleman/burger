<header class="header">
  <img src="burger.png" alt="Burger"/>
  <h1>Eat-Da-Burger!</h1>
</header>

<div class="wrapper">
  <div class="left-content">
    <h2>Ready to Serve</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=0}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="right-content">
    <h2>Devoured</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=1}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

